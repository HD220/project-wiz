{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2024", "ES2022", "DOM", "DOM.Iterable"],
    "types": ["vitest/globals"],
    "outDir": "dist",
    "baseUrl": ".",

    "noEmit": false,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/components/*": ["./src/renderer/components/*"],
      "@/ui/*": ["./src/renderer/components/ui/*"],
      "@/lib/*": ["./src/renderer/lib/*"],
      "@/hooks/*": ["./src/renderer/hooks/*"],
      "@/features/*": ["./src/renderer/features/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/domains/*": ["./src/main/domains/*"],
      "@/infrastructure/*": ["./src/main/infrastructure/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "drizzle.config.ts",
    "forge.config.ts",
    "forge.env.d.ts",
    "lingui.config.ts",
    "vitest.config.mts",
    "vitest.config.ts",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules", "coverage"]
}
