{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2024", "ES2022", "DOM", "DOM.Iterable"],
    "outDir": "dist",
    "baseUrl": ".",

    "noEmit": false,

    //electron
    "types": ["node", "electron", "vitest"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/application/*": ["./src_refactored/core/application/*"],
      "@/core/*": ["./src_refactored/core/*"],
      "@/domain/*": ["./src_refactored/core/domain/*"],
      "@/infrastructure/*": ["./src_refactored/infrastructure/*"],
      "@/presentation/*": ["./src_refactored/presentation/*"],
      "@/shared/*": ["./src_refactored/shared/*"],
      "@/*": ["./src_refactored/*"]
    }
  },
  "include": [
    "src_refactored/**/*",
    "drizzle.config.ts",
    "forge.config.ts",
    "forge.env.d.ts",
    "lingui.config.ts",
    "vitest.config.mts",
    "vitest.config.ts",
    "tailwind.config.ts",
  ],
  "exclude": ["node_modules", "coverage"]
}
