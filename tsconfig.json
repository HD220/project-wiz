{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "outDir": "dist",
    "baseUrl": ".",

    "noEmit": false,

    //electron
    "types": ["node", "electron", "vitest"],
    "esModuleInterop": true,
    "strict": true,

    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "@/components/*": ["./src/infrastructure/frameworks/react/components/*"],
      "@/lib/*": ["./src/infrastructure/frameworks/react/lib/*"],
      "@/hooks/*": ["./src/infrastructure/frameworks/react/hooks/*"],
      "@/ui/*": ["./src/infrastructure/frameworks/react/components/ui/*"],
      "@/application/*": ["./src/core/application/*"],
      "@/core/*": ["./src/core/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/core/common/result": ["./src/shared/result.ts"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "drizzle.config.ts",
    "forge.config.ts",
    "forge.env.d.ts",
    "lingui.config.ts",
    "vitest.config.mts"
  ],
  "exclude": ["node_modules", "coverage"]
}
