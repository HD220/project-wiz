{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2024", "ES2022", "DOM", "DOM.Iterable"],
    "outDir": "dist",
    "baseUrl": ".",

    "noEmit": false,

    //electron
    "types": ["node", "electron", "vitest"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/components/*": ["./src/infrastructure/frameworks/react/components/*"],
      "@/lib/*": ["./src/infrastructure/frameworks/react/lib/*"],
      "@/hooks/*": ["./src/infrastructure/frameworks/react/hooks/*"],
      "@/ui/*": ["./src/infrastructure/frameworks/react/components/ui/*"],
      "@/application/*": ["./src/core/application/*"],
      "@/core/*": ["./src/core/*"],
      "@/shared/*": ["./src/shared/*"],
      "@interfaces/*": ["./src/core/domain/entities/*/interfaces/*"],
      "@/core/common/result": ["./src/shared/result.ts"],
      "@/*": ["./src/*"],
      "@/refactored/*": ["./src_refactored/*"]
    }
  },
  "include": [
    "src/**/*",
    "src_refactored/**/*",
    "tests/**/*",
    "drizzle.config.ts",
    "forge.config.ts",
    "forge.env.d.ts",
    "lingui.config.ts",
    "vitest.config.mts",
    "vitest.config.ts",
    "types/k6.d.ts"
  ],
  "exclude": ["node_modules", "coverage"]
}
