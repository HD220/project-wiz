{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2024", "ES2022", "DOM", "DOM.Iterable"],
    "outDir": "dist",
    "baseUrl": ".",

    "noEmit": false,

    //electron
    "types": ["node", "electron", "vitest"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      // New UI Aliases for src_refactored/presentation/ui/
      "@/app/*": ["./src_refactored/presentation/ui/app/*"],
      "@/assets/*": ["./src_refactored/presentation/ui/assets/*"],
      "@/components/*": ["./src_refactored/presentation/ui/components/*"],
      "@/config/*": ["./src_refactored/presentation/ui/config/*"],
      "@/hooks/*": ["./src_refactored/presentation/ui/hooks/*"],
      "@/lib/*": ["./src_refactored/presentation/ui/lib/*"],
      "@/services/*": ["./src_refactored/presentation/ui/services/*"],
      "@/store/*": ["./src_refactored/presentation/ui/store/*"],
      "@/styles/*": ["./src_refactored/presentation/ui/styles/*"],
      "@/types/*": ["./src_refactored/presentation/ui/types/*"],
      "@/*": ["./src_refactored/presentation/ui/*"], // Main alias for the new UI, should take precedence for this path

      // Existing Aliases (may need review/cleanup later, kept for now to avoid breaking old code)
      "@/components.old/*": ["./src/infrastructure/frameworks/react/components/*"], // Renamed to avoid conflict
      "@/lib.old/*": ["./src/infrastructure/frameworks/react/lib/*"], // Renamed to avoid conflict
      "@/hooks.old/*": ["./src/infrastructure/frameworks/react/hooks/*"], // Renamed to avoid conflict
      "@/ui.old/*": ["./src/infrastructure/frameworks/react/components/ui/*"], // Renamed to avoid conflict
      "@/application/*": ["./src/core/application/*"],
      "@/core/*": ["./src/core/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/interfaces/*": ["./src/core/domain/entities/*/interfaces/*"],
      "@/core/common/result": ["./src/shared/result.ts"],
      "@/refactored/*": ["./src_refactored/*"],
      "@/src/*": ["./src/*"] // More generic fallback for old src structure if needed
    }
  },
  "include": [
    "src/**/*",
    "src_refactored/**/*",
    "tests/**/*",
    "drizzle.config.ts",
    "forge.config.ts",
    "forge.env.d.ts",
    "lingui.config.ts",
    "vitest.config.mts",
    "vitest.config.ts",
    "types/k6.d.ts"
  ],
  "exclude": ["node_modules", "coverage"]
}
