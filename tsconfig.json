{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "baseUrl": ".",

    //electron
    "types": ["node", "electron"],
    "esModuleInterop": true,
    "strict": true,

    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/client/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
