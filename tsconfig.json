{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2024", "ES2022", "DOM", "DOM.Iterable"],
    "outDir": "dist",
    "baseUrl": ".",

    "noEmit": false,

    //electron
    "types": ["node", "electron", "vitest"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/application/*": ["./src_refactored/core/application/*"],
      "@/core/*": ["./src_refactored/core/*"],
      "@/domain/*": ["./src_refactored/core/domain/*"],
      "@/infrastructure/*": ["./src_refactored/infrastructure/*"],
      "@/presentation/*": ["./src_refactored/presentation/*"], // Keep this for general presentation if needed
      "@/shared/*": ["./src_refactored/shared/*"],
      "@/ui/*": ["./src_refactored/presentation/ui/*"], // Correct alias for @/ui/...
      "@/*": ["./src_refactored/*"] // Base @/ alias, ensure it doesn't conflict if @/ui is more specific
      // Removed old @ui/* (no slash) and specific @ui/components, @ui/lib etc. aliases
    }
  },
  "include": [
    "src_refactored/**/*",
    "src_refactored/presentation/ui/global.d.ts",
    "drizzle.config.ts",
    "forge.config.ts",
    "forge.env.d.ts",
    "lingui.config.ts",
    "vitest.config.mts",
    "vitest.config.ts",
    "tailwind.config.ts",
  ],
  "exclude": ["node_modules", "coverage"]
}
