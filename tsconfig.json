{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2024", "ES2022", "DOM", "DOM.Iterable"],
    "outDir": "dist",
    "baseUrl": ".",

    "noEmit": false,

    //electron
    "types": ["node", "electron", "vitest"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/application/*": ["./src/core/application/*"],
      "@/core/*": ["./src/core/*"],
      "@/domain/*": ["./src/core/domain/*"],
      "@/infrastructure/*": ["./src/infrastructure/*"],
      "@/components/*": ["./src/presentation/ui/components/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/ui/*": ["./src/presentation/ui/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "drizzle.config.ts",
    "forge.config.ts",
    "forge.env.d.ts",
    "lingui.config.ts",
    "vitest.config.mts",
    "vitest.config.ts",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules", "coverage"]
}
