{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "outDir": "dist",
    "baseUrl": ".",

    "noEmit": false,

    //electron
    "types": ["node", "electron"],
    "esModuleInterop": true,
    "strict": true,

    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "@/components/*": ["./src/infrastructure/frameworks/react/components/*"],
      "@/lib/*": ["./src/infrastructure/frameworks/react/lib/*"],
      "@/hooks/*": ["./src/infrastructure/frameworks/react/hooks/*"],
      "@/ui/*": ["./src/infrastructure/frameworks/react/components/ui/*"],
      "@/application/*": ["./src/core/application/*"],
      "@/shared/*": ["./src/shared/*"],
      "@interfaces/*": ["./src/core/domain/entities/**/interfaces/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
