{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2024", "ES2022", "DOM", "DOM.Iterable"],
    "outDir": "dist",
    "baseUrl": ".",

    "noEmit": false,

    //electron
    "types": ["node", "electron", "vitest"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      // New UI Aliases for src_refactored/presentation/ui/
      "@/app/*": ["./src_refactored/presentation/ui/app/*"],
      "@/assets/*": ["./src_refactored/presentation/ui/assets/*"],
      "@/components/*": ["./src_refactored/presentation/ui/components/*"],
      "@/config/*": ["./src_refactored/presentation/ui/config/*"],
      "@/hooks/*": ["./src_refactored/presentation/ui/hooks/*"],
      "@/lib/*": ["./src_refactored/presentation/ui/lib/*"],
      "@/services/*": ["./src_refactored/presentation/ui/services/*"],
      "@/store/*": ["./src_refactored/presentation/ui/store/*"],
      "@/styles/*": ["./src_refactored/presentation/ui/styles/*"],
      "@/types/*": ["./src_refactored/presentation/ui/types/*"],
      "@/*": ["./src_refactored/presentation/ui/*"], // Main alias for the new UI, should take precedence for this path

      // Existing Aliases (may need review/cleanup later, kept for now to avoid breaking old code)
      "@/components.old/*": ["./src/infrastructure/frameworks/react/components/*"], // Renamed to avoid conflict
      // Renamed .old to .legacy for consistency
      "@/components.legacy/*": ["./src/infrastructure/frameworks/react/components/*"],
      "@/lib.legacy/*": ["./src/infrastructure/frameworks/react/lib/*"],
      "@/hooks.legacy/*": ["./src/infrastructure/frameworks/react/hooks/*"],
      "@/ui.legacy/*": ["./src/infrastructure/frameworks/react/components/ui/*"],

      // Aliases for src_refactored general structure (ensure these are comprehensive)
      "@/application/*": ["./src_refactored/core/application/*"],
      "@/core/*": ["./src_refactored/core/*"],
      "@/domain/*": ["./src_refactored/core/domain/*"],
      "@/infrastructure/*": ["./src_refactored/infrastructure/*"],
      "@/presentation/*": ["./src_refactored/presentation/*"], // General presentation
      "@/shared/*": ["./src_refactored/shared/*"],
      "@/refactored/*": ["./src_refactored/*"],

      // Legacy Aliases from 'src' (original structure)
      "@/application.legacy/*": ["./src/core/application/*"],
      "@/core.legacy/*": ["./src/core/*"],
      // "@/domain.legacy/*" was not explicitly present, but interfaces.legacy might cover it
      "@/interfaces.legacy/*": ["./src/core/domain/entities/*/interfaces/*"], // Potentially covers old domain model interfaces
      "@/shared.legacy/*": ["./src/shared/*"], // If there was a top-level shared in old src
      "@/core/common/result.legacy": ["./src/shared/result.ts"], // Specific shared utility
      "@/src.legacy/*": ["./src/*"] // Broad legacy alias
    }
  },
  "include": [
    "src_refactored/**/*",
    "tests/**/*",
    // "src/**/*", // Keep src commented out to ensure focus on src_refactored
    "drizzle.config.ts",
    "forge.config.ts",
    "forge.env.d.ts",
    "lingui.config.ts",
    "vitest.config.mts",
    "vitest.config.ts",
    "tailwind.config.ts", // Added here
    "types/k6.d.ts"
  ],
  "exclude": ["node_modules", "coverage"]
}
