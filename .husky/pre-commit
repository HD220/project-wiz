#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run quick quality checks before commit
echo "🔍 Running pre-commit checks..."

# Run quick quality check (lint + type-check)
npm run quality:quick

# Check for console.log statements
echo "🔍 Checking for console.log statements..."
if grep -r "console\.log" --include="*.ts" --include="*.tsx" src/ | grep -v "// TODO" | grep -v "// eslint-disable"; then
  echo "❌ Found console.log statements. Please remove them or convert to proper logging."
  exit 1
fi

echo "✅ Pre-commit checks passed!"