#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run quick quality checks before commit
echo "ğŸ” Running pre-commit checks..."

# Run quick quality check (lint + type-check)
npm run quality:quick

# Check for console.log statements
echo "ğŸ” Checking for console.log statements..."
if grep -r "console\.log" --include="*.ts" --include="*.tsx" src/ | grep -v "// TODO" | grep -v "// eslint-disable"; then
  echo "âŒ Found console.log statements. Please remove them or convert to proper logging."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"